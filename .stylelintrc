{
  "extends": "stylelint-config-recommended",
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["extends", "tailwind", "include", "use"]
      }
    ],
    "block-no-empty": null,
    "unit-allowed-list": ["em", "rem", "s", "px", "vh"],
    "no-invalid-position-at-import-rule": null
  }
}
